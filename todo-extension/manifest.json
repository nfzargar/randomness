{
  "manifest_version": 3,
  "name": "Daily Todo List",
  "version": "1.0",
  "description": "A simple daily todo list that resets at 7 AM",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.webp",
      "48": "icon48.webp",
      "128": "icon128.webp"
    }
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.webp",
    "48": "icon48.webp",
    "128": "icon128.webp"
  }
}